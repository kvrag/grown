<h2>Edit <%= @garden.name %></h2>

  <%= form_for(@garden, multipart: true) do |f| %>

    <% if @errors %>
      <%= render 'layouts/errors' %>
    <% end %>

    <%= f.label "Name of Garden" %>
    <%= f.text_field :name %>

    <%= f.label "Location" %>
    <%= f.text_field :location %>

    <%= f.submit "Update" %>

  <% end %>